CREATE TRIGGER ad_project_issues_1
AFTER DELETE ON
    project_issues
FOR EACH ROW WHEN
    (
        SELECT
            COUNT(issue_id) = 0
        FROM
            project_issues
        WHERE
            issue_id = OLD.issue_id
    )
BEGIN
    SELECT debug(
        'TRIGGER ad_project_issues_1',
        OLD.issue_id,
        OLD.project_id,
        OLD.status_id,
        OLD.update_id
    );

    DELETE FROM
        issues
    WHERE
        id = OLD.issue_id
    ;
END;