CREATE TRIGGER ai_task_updates_2
AFTER INSERT ON
    task_updates
FOR EACH ROW WHEN
    NEW.status_id IS NOT NULL
BEGIN
    INSERT INTO
        project_related_updates(
            update_id,
            project_id
        )
    SELECT
        NEW.update_id,
        project_id
    FROM
        task_status
    WHERE
        id = NEW.status_id
    ;

END;