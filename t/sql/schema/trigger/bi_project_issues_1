CREATE TRIGGER bi_project_issues_1
BEFORE INSERT ON
    project_issues
FOR EACH ROW WHEN
    EXISTS (
        SELECT
            1
        FROM
            project_issues
        WHERE
            id = NEW.id
    )
BEGIN

    SELECT debug(
        'TRIGGER bi_project_issues_1',
        NEW.id,
        NEW.issue_id,
        NEW.project_id,
        NEW.status_id,
        NEW.update_id
    );


    UPDATE
        project_issues
    SET
        status_id = NEW.status_id,
        update_id = NEW.update_id
    WHERE
        id = NEW.id
    ;

    SELECT RAISE(IGNORE);
END;