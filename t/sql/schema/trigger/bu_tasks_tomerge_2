CREATE TRIGGER bu_tasks_tomerge_2
BEFORE UPDATE OF
    resolve
ON
    tasks_tomerge
FOR EACH ROW WHEN
    NEW.resolve = 1 AND
    OLD.title != 0
BEGIN

    SELECT debug(
        'TRIGGER bu_tasks_tomerge_2',
        OLD.task_id
    );

    UPDATE
        tasks
    SET
        title = (
            SELECT
                task_updates.title
            FROM
                task_updates
            INNER JOIN
                updates
            ON
                updates.id = task_updates.update_id
            WHERE
                task_updates.task_id = OLD.task_id AND
                task_updates.title IS NOT NULL
            ORDER BY
                updates.mtime DESC,
                updates.uuid
            LIMIT
                1
        )
    WHERE
        id = OLD.task_id
    ;

END;