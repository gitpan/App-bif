CREATE TRIGGER bu_task_status_tomerge_1
BEFORE UPDATE OF
    resolve
ON
    task_status_tomerge
FOR EACH ROW WHEN
    NEW.resolve = 1 AND
    OLD.status != 0
BEGIN

    SELECT debug(
        'TRIGGER bu_task_status_tomerge_1',
        OLD.task_status_id
    );

    UPDATE
        task_status
    SET
        status = (
            SELECT
                task_status_updates.status
            FROM
                task_status_updates
            INNER JOIN
                updates
            ON
                updates.id = task_status_updates.update_id
            WHERE
                task_status_updates.task_status_id =
                    OLD.task_status_id AND
                task_status_updates.status IS NOT NULL
            ORDER BY
                updates.mtime DESC,
                updates.uuid
            LIMIT
                1
        )
    WHERE
        id = OLD.task_status_id
    ;

END;